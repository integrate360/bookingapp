    "express": "^4.21.1",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.8.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pm2": "^5.4.2",
    "socket.io": "^4.8.1",
    "twilio": "^5.3.5"
